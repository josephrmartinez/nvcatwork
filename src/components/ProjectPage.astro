---
import BaseLayout from "../layouts/BaseLayout.astro";
const { title, github, blogPost, desc, url, img } = Astro.props;
---

<BaseLayout title={title}>
  <main aria-labelledby="header" class="relative overflow-hidden" id="tools">
    <h2 class="sr-only" id="header">{title}</h2>
    <div
      class="relative mx-auto px-8 max-w-7xl py-8 lg:py-14 lg:px-36 md:px-12"
    >
      <div
        class="grid grid-cols-1 gap-6 lg:gap-y-24 md:grid-cols-2 lg:grid-cols-2"
      >
        <a href={url}>
          <img
            class="w-full rounded-3xl shadow-2xl"
            src={img}
            alt={title}
            width="1310"
            height="873"
          />
        </a>
        <div class="pt-4 flex flex-col px-6 h-full">
          <p
            class="mb-5 text-xl font-semibold leading-6 tracking-wide text-negroni-300"
          >
            {title}
          </p>

          <div class="text-negroni-300">
            {desc}
          </div>
          <div class="mt-3">
            <div class="flex flex-row items-end pt-3 ml-1">
              <a
                href={url}
                target="_blank"
                class="group hover:text-orange-600 transition duration-200 ease-in-out flex flex-row items-end mr-3 text-sm"
              >
                <svg
                  width="22"
                  height="22"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                  class="fill-current text-negroni-300 group-hover:text-orange-600 transition duration-200 ease-in-out"
                  ><path
                    d="M6.188 8.719c.439-.439.926-.801 1.444-1.087 2.887-1.591 6.589-.745 8.445 2.069l-2.246 2.245c-.644-1.469-2.243-2.305-3.834-1.949-.599.134-1.168.433-1.633.898l-4.304 4.306c-1.307 1.307-1.307 3.433 0 4.74 1.307 1.307 3.433 1.307 4.74 0l1.327-1.327c1.207.479 2.501.67 3.779.575l-2.929 2.929c-2.511 2.511-6.582 2.511-9.093 0s-2.511-6.582 0-9.093l4.304-4.306zm6.836-6.836l-2.929 2.929c1.277-.096 2.572.096 3.779.574l1.326-1.326c1.307-1.307 3.433-1.307 4.74 0 1.307 1.307 1.307 3.433 0 4.74l-4.305 4.305c-1.311 1.311-3.44 1.3-4.74 0-.303-.303-.564-.68-.727-1.051l-2.246 2.245c.236.358.481.667.796.982.812.812 1.846 1.417 3.036 1.704 1.542.371 3.194.166 4.613-.617.518-.286 1.005-.648 1.444-1.087l4.304-4.305c2.512-2.511 2.512-6.582.001-9.093-2.511-2.51-6.581-2.51-9.092 0z"
                  ></path></svg
                ><span
                  class="hidden md:inline ml-3 text-negroni-300 group-hover:text-orange-600 transition duration-200 ease-in-out"
                  >website</span
                >
              </a>
              <a
                href={github}
                target="_blank"
                class="flex flex-row items-end mx-3 text-negroni-300 hover:text-orange-600 transition duration-200 ease-in-out text-sm"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  style="fill: currentColor;transform: ;msFilter:;"
                  ><path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974 0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481 0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338-.452-1.152-1.107-1.459-1.107-1.459-.905-.619.069-.605.069-.605 1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829.091-.645.351-1.085.635-1.334-2.214-.251-4.542-1.107-4.542-4.93 0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64 0 0 .837-.269 2.742 1.021a9.582 9.582 0 0 1 2.496-.336 9.554 9.554 0 0 1 2.496.336c1.906-1.291 2.742-1.021 2.742-1.021.545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675 0 3.833-2.33 4.675-4.552 4.922.355.308.675.916.675 1.846 0 1.334-.012 2.41-.012 2.737 0 .267.178.577.687.479C19.146 20.115 22 16.379 22 11.974 22 6.465 17.535 2 12.026 2z"
                  ></path>
                </svg><span class="hidden md:inline ml-3">GitHub repo</span></a
              >
              <a
                href={blogPost}
                target="_self"
                class="flex flex-row items-end ml-3 hover:text-orange-600 text-negroni-300 transition duration-200 ease-in-out text-sm"
              >
                <>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    style="fill: currentColor;transform: ;msFilter:;"
                  >
                    <path
                      fill-rule="evenodd"
                      clip-rule="evenodd"
                      d="m17 17.75c0-.414-.336-.75-.75-.75h-13.5c-.414 0-.75.336-.75.75s.336.75.75.75h13.5c.414 0 .75-.336.75-.75zm5-4c0-.414-.336-.75-.75-.75h-18.5c-.414 0-.75.336-.75.75s.336.75.75.75h18.5c.414 0 .75-.336.75-.75zm-9-4c0-.414-.336-.75-.75-.75h-9.5c-.414 0-.75.336-.75.75s.336.75.75.75h9.5c.414 0 .75-.336.75-.75zm7-4c0-.414-.336-.75-.75-.75h-16.5c-.414 0-.75.336-.75.75s.336.75.75.75h16.5c.414 0 .75-.336.75-.75z"
                      fill-rule="nonzero"></path>
                  </svg>
                  <span class="hidden md:inline ml-3">blog post</span>
                </>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
