---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import Tools from "../components/landing/Tools.astro";
import About from "../components/landing/About.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="nvc at work"
  description="Free tools for developing self-awareness and improving communication outcomes."
  canonical="https://www.nvcatwork.com"
  openGraph={{
    url: "https://www.nvcatwork.com",
    title: "nvc at work",
    description:
      "Free tools for developing self-awareness and improving communication outcomes. ",
    images: [
      {
        url: "https://www.michaelandreuzza.com/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.michaelandreuzza.com/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.michaelandreuzza.com/opengraph/social-og.jpg" },
      { url: "https://www.michaelandreuzza.com/opengraph/twitter-og.jpg" },
    ],
    site_name: "YourSitesName",
  }}
/>
<BaseLayout>
  <Hero />
  <Tools />
  <About />
</BaseLayout>

<script>
  const buttons = document.querySelectorAll("button");

  buttons.forEach((button) => {
    button.addEventListener("click", copyEmailAddress);
  });

  function copyEmailAddress() {
    navigator.clipboard.writeText("joseph.r.martinez@gmail.com");
    buttons.forEach((button) => {
      button.textContent = "email copied";
    });
  }
</script>
